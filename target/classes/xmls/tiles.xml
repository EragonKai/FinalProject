<?xml version="1.0" encoding="UTF-8" ?>

<!--
    Necessary Attributes:
        - "id": the name of the tile and (if no path is given), the key to it's sprite in ResourceManager
        - "x": the x position of the tile in tiles.png
        - "y": the y position of the tile in tiles.png
    Optional Attribute:
        - "img": the optional path to a sprite for the tile
        - "walkable": true by default, represents if the tile can be walked on by entities
-->
<tiles>
    <Tile id="grass" x="64" y="0"/>
    <Tile id="stone" x="32" y="0"/>
    <Tile id="void" x="0" y="0" walkable="false"/>
    <Tile id="fake void" x="0" y="0"/>
    <Tile id="fleshy" x="0" y="32"/>
    <Tile id="extra red fleshy" x="32" y="32"/>
    <Tile id="red light" x="64" y="32"/>
    <Tile id="spacey thingy 1" x="0" y="64"/>
    <Tile id="spacey thingy 2" x="32" y="64"/>
    <Tile id="spacey thingy 3" x="64" y="64"/>
    <Tile id="horrible light thingy" x="96" y="64" walkable="false"/>



</tiles>